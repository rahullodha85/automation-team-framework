    <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <surefire.fork.count>3</surefire.fork.count>
    <apache-maven>1.8</apache-maven>
    <selenium-webdriver-version>2.43.0</selenium-webdriver-version>
